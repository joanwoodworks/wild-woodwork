---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const products = (await getCollection('products')).sort((a, b) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);

const settings = await import('../content/settings/general.json');
---

<Layout title={settings.title} description={settings.tagline}>
  <header>
    <div class="container">
      <h1>{settings.title}</h1>
      <p class="tagline">{settings.tagline}</p>
    </div>
  </header>

  <main class="container">
    <!-- Featured Products -->
    <section class="products-section">
      <h2>Featured Work</h2>
      <div class="products-grid">
        {products.filter(p => p.data.featured).map(product => (
          <div class="product-card">
            <div class="product-image">
              {product.data.image ? (
                <img src={product.data.image} alt={product.data.title} />
              ) : (
                <div class="placeholder-image">Image Coming Soon</div>
              )}
            </div>
            <div class="product-info">
              <h3>{product.data.title}</h3>
              <p class="product-description">{product.data.description}</p>
              {product.data.wood && <p class="product-detail">Wood: {product.data.wood}</p>}
              {product.data.dimensions && <p class="product-detail">Size: {product.data.dimensions}</p>}
              {product.data.price && <p class="product-price">{product.data.price}</p>}
              {!product.data.available && <p class="sold-out">Sold</p>}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- All Products -->
    <section class="products-section">
      <h2>All Products</h2>
      <div class="products-grid">
        {products.filter(p => !p.data.featured).map(product => (
          <div class="product-card">
            <div class="product-image">
              {product.data.image ? (
                <img src={product.data.image} alt={product.data.title} />
              ) : (
                <div class="placeholder-image">Image Coming Soon</div>
              )}
            </div>
            <div class="product-info">
              <h3>{product.data.title}</h3>
              <p class="product-description">{product.data.description}</p>
              {product.data.wood && <p class="product-detail">Wood: {product.data.wood}</p>}
              {product.data.dimensions && <p class="product-detail">Size: {product.data.dimensions}</p>}
              {product.data.price && <p class="product-price">{product.data.price}</p>}
              {!product.data.available && <p class="sold-out">Sold</p>}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- About Section -->
    <section class="about-section">
      <h2>About</h2>
      <p>{settings.about}</p>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
      <h2>Get in Touch</h2>
      <p>Interested in a piece or have a custom request?</p>
      <div class="contact-info">
        {settings.email && (
          <p>Email: <a href={`mailto:${settings.email}`}>{settings.email}</a></p>
        )}
        {settings.phone && (
          <p>Phone: <a href={`tel:${settings.phone}`}>{settings.phone}</a></p>
        )}
        {settings.instagram_url && (
          <p>Instagram: <a href={settings.instagram_url} target="_blank" rel="noopener">{settings.instagram}</a></p>
        )}
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <p>&copy; {new Date().getFullYear()} {settings.title}. Handcrafted with care.</p>
    </div>
  </footer>
</Layout>

<style>
  header {
    background: linear-gradient(135deg, var(--dark-wood) 0%, var(--wood-brown) 100%);
    color: white;
    padding: 4rem 0 3rem;
    text-align: center;
    margin-bottom: 3rem;
  }

  header h1 {
    color: white;
    font-size: 3rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .tagline {
    font-size: 1.25rem;
    opacity: 0.95;
    font-weight: 300;
  }

  .products-section {
    margin-bottom: 4rem;
  }

  .products-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--wood-brown);
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .product-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  }

  .product-image {
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: #f5f5f5;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--light-text);
    font-style: italic;
  }

  .product-info {
    padding: 1.5rem;
  }

  .product-info h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .product-description {
    color: var(--light-text);
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .product-detail {
    font-size: 0.9rem;
    color: var(--light-text);
    margin-bottom: 0.25rem;
  }

  .product-price {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--wood-brown);
    margin-top: 1rem;
  }

  .sold-out {
    background: #e0e0e0;
    color: #666;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    display: inline-block;
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }

  .about-section {
    background: white;
    padding: 3rem;
    border-radius: 8px;
    margin-bottom: 3rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .about-section h2 {
    margin-bottom: 1rem;
  }

  .about-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text);
  }

  .contact-section {
    background: white;
    padding: 3rem;
    border-radius: 8px;
    margin-bottom: 3rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    text-align: center;
  }

  .contact-section h2 {
    margin-bottom: 1rem;
  }

  .contact-info {
    margin-top: 1.5rem;
  }

  .contact-info p {
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  footer {
    background: var(--dark-wood);
    color: white;
    padding: 2rem 0;
    text-align: center;
    margin-top: 4rem;
  }

  footer p {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    header h1 {
      font-size: 2rem;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
